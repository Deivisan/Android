# Fun√ß√£o para abrir arquivos Markdown com o PocketMark
function open_md() {
    if [ -z "$1" ]; then
        echo "Uso: open_md <caminho_para_arquivo_markdown>"
        return 1
    fi
    
    local ARQUIVO_MARKDOWN="$1"
    
    if [ ! -f "$ARQUIVO_MARKDOWN" ]; then
        echo "Erro: Arquivo $ARQUIVO_MARKDOWN n√£o encontrado"
        return 1
    fi
    
    # Abrir o arquivo com o PocketMark usando o termux-open
    termux-open "$ARQUIVO_MARKDOWN"
}

# Associar arquivos .md √† fun√ß√£o open_md
alias md='open_md'# Aliases adicionais para produtividade
